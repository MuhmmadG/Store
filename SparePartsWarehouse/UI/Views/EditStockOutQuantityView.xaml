<UserControl x:Class="SparePartsWarehouse.UI.Views.EditStockOutQuantityView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     
        FlowDirection="RightToLeft">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= DataGrid ================= -->
        <GroupBox Header="الأصناف المنصرفة">
            <DataGrid ItemsSource="{Binding Items}"
                      SelectedItem="{Binding SelectedItem}"
                      AutoGenerateColumns="False"
                      Height="200"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="الصنف"
                                        Binding="{Binding ItemName}"
                                        ElementStyle="{StaticResource CenterCellText}"
                                        Width="*"/>
                    <DataGridTextColumn Header="الوصف"
                                        Binding="{Binding ItemCode}"
                                        ElementStyle="{StaticResource CenterCellText}"
                                        Width="*"/>
                    <DataGridTextColumn Header="الكمية"
                                        Binding="{Binding Quantity}"
                                        ElementStyle="{StaticResource CenterCellText}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- ================= Edit ================= -->
        <StackPanel Grid.Row="1" Margin="0,15,0,0">

            <TextBlock Text="الكمية الحالية"/>
            <TextBox Text="{Binding OldQuantity}"
                     IsReadOnly="True"
                     Height="28"/>

            <TextBlock Text="الكمية الجديدة" Margin="0,8,0,0"/>
            <TextBox Text="{Binding NewQuantity}"
                     Height="28"/>

            <Button Content="تنفيذ التعديل"
                    Command="{Binding EditCommand}"
                    Height="35"
                    Margin="0,12,0,0"
                    Background="#007ACC"
                    Foreground="White"/>

            <TextBlock Text="{Binding Message}"
                       Foreground="Red"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
